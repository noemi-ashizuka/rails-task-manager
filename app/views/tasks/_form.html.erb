<%= form_for @task do |f| %>
  <div class="form-group">
    <%= f.label :title, "Enter task title"%>
    <%= f.text_field :title, class:"form-control mb-2" %>
  </div>
  <div class="form-group">
    <%= f.label :details, "Enter task details"%>
    <%= f.text_field :details, class:"form-control mb-2" %>
  </div>
  <div class="form-group">
    <%= f.check_box(:completed) %>
    <%= f.label(:completed, "completed") %>
  </div>
    <%= f.submit class:"btn btn-primary mb-2" %>
<% end %>

<%= link_to 'Back', tasks_path %>
