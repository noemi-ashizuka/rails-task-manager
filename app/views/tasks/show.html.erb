<div class="container">
  <h1><%= @task.title %></h1>
  <p><%= @task.details %></p>
  <%= link_to tasks_path do %>
    <i class="fas fa-arrow-left mr-4"></i>
  <% end %>
  <%= link_to edit_task_path do %>
    <i class="far fa-edit mr-4"></i>
  <% end %>
  <%= link_to task_path(@task), method: :delete, data: { confirm: "Are you sure you want to delete #{@task.title}?"} do %>
    <i class="far fa-trash-alt mr-4"></i>
  <% end %>
</div>
